//Perimeter Of Rectangle
periofrec:
{
int porlength, porbreath, porans;
printf("\aPerimeter Of Rectangle\n\n");
pingpor:
printf("Enter Length : ");
   scanf("\n%d", &porlength); 
printf("Enter Breadth : ");
   scanf("\n%d", &porbreath);
porans = (porlength + porbreath) * 2;
//printf("\a");
printf("Perimeter Is %d", porans); 
printf("\n\n");
goto pingpor;
}

//Area Of Circle
areaofcircle:
{

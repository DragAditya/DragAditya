  scanf("%c",&operator);
  switch(operator)
    {
    case '-': goto minus;
       break;
    case '/': goto division;
       break;
    case '*': goto multiple;
       break;
    case '+': goto add;
       break;
    case '$': goto algebra;
       break;
     default: goto TryAgain;
    }
      
// Multiple
multiple:
{
printf("\n");
int a,b,c;
pingmultiple:
